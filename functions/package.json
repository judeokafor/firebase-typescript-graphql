{
	"name": "functions",
	"scripts": {
		"start": "nodemon",
		"deploy": "npm run build && firebase deploy --only functions",
		"logs": "firebase functions:log",
		"lint": "eslint --fix src/",
		"serve:emulator": "firebase functions:config:get > .runtimeconfig.json && npm run build && firebase emulators:start",
		"serve": "firebase functions:config:get > .runtimeconfig.json && npm run build && firebase serve --only functions",
		"build": "webpack --env.ENVIRONMENT=production --config webpack.config.js --progress",
		"build:dev": "webpack --watch --env.ENVIRONMENT=development --config webpack.config.js --progress",
		"test": "mocha -r ts-node/register tests/**/*.test.ts",
		"watch:test": "mocha -r ts-node/register --watch --watch-files src,tests tests/**/*.test.ts"
	},
	"engines": {
		"node": "10"
	},
	"main": "dist/index.js",
	"dependencies": {
		"@types/busboy": "^0.2.3",
		"@types/cors": "^2.8.6",
		"axios": "^0.19.2",
		"body-parser": "1.19.0",
		"busboy": "^0.3.1",
		"class-transformer": "^0.2.3",
		"class-validator": "^0.12.2",
		"cors": "^2.8.5",
		"express": "4.17.1",
		"firebase": "^7.16.1",
		"firebase-admin": "^8.13.0",
		"firebase-functions": "^3.8.0",
		"fireorm": "^0.15.0",
		"http-status-codes": "^1.4.0",
		"moment": "^2.27.0",
		"morgan": "^1.10.0",
		"nanoid": "^3.1.10",
		"nodemailer": "^6.4.10",
		"reflect-metadata": "^0.1.13"
	},
	"devDependencies": {
		"@types/express": "4.17.7",
		"@types/mocha": "7.0.2",
		"@types/mock-require": "2.0.0",
		"@types/node": "14.0.19",
		"@types/sinon": "9.0.4",
		"@types/supertest": "2.0.10",
		"@typescript-eslint/eslint-plugin": "3.6.0",
		"@typescript-eslint/parser": "3.6.0",
		"clean-webpack-plugin": "3.0.0",
		"dotenv": "8.2.0",
		"eslint": "7.4.0",
		"eslint-config-prettier": "6.11.0",
		"eslint-plugin-prettier": "3.1.4",
		"eslint-plugin-promise": "^4.2.1",
		"firebase-functions-test": "^0.2.0",
		"mocha": "8.0.1",
		"mock-require": "3.0.3",
		"nodemon": "2.0.4",
		"prettier": "2.0.5",
		"sinon": "9.0.2",
		"supertest": "4.0.2",
		"ts-loader": "7.0.5",
		"ts-node": "8.10.2",
		"typescript": "3.9.6",
		"webpack": "4.43.0",
		"webpack-cli": "3.3.12",
		"webpack-node-externals": "1.7.2"
	},
	"private": true
}
